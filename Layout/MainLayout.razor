@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">English School</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Style="full-page-content" Class="ma-16 pa-4">
        @Body
    </MudMainContent>
    <MudAppBar WrapContent="true" Fixed="true" Bottom="true" Elevation="1">
        <MudGrid Justify="Justify.Center" AlignItems="center">
            <MudItem>
                <MudIconButton Icon="@Icons.Custom.Brands.Facebook" Href="https://www.facebook.com" Target="_blank" Color="Color.Inherit" />
            </MudItem>
            <MudItem Item>
                <MudIconButton Icon="@Icons.Custom.Brands.Twitter" Href="https://www.twitter.com" Target="_blank" Color="Color.Inherit" />
            </MudItem>
            <MudItem Item>
                <MudIconButton Icon="@Icons.Custom.Brands.Instagram" Href="https://www.instagram.com" Target="_blank" Color="Color.Inherit" />
            </MudItem>
            <MudItem Item>
                <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Href="https://www.linkedin.com" Target="_blank" Color="Color.Inherit" />
            </MudItem>
            <MudItem Item>
                <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
            </MudItem>
            <MudItem xs="12">
                <MudText Class="text-center mt-4">&copy; 2024 English School. Всі права захищені.</MudText>
            </MudItem>
        </MudGrid>
    </MudAppBar>
</MudLayout>


@code {
    bool _open;

    void ToggleDrawer()
    {
        _open = !_open;
    }
}
